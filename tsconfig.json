{
    "compilerOptions": {
        "outDir": "./lib",
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "target": "es6",
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "lib": [ "es6" ],
        "paths": {
            "*": ["node_modules/*"]
        },
        "types": ["mocha", "node"]
    },
    "exclude": ["./node_modules"],
    "include": ["src", "test"]
}
